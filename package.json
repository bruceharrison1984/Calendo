{
  "name": "@next-month/layout",
  "version": "0.0.1",
  "description": "A simple month view calendar",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "rollup": "rollup -c",
    "analyze": "NODE_ENV=production ANALYZE=true webpack",
    "barrels": "barrelsby -c .barrelsby.json",
    "build": "NODE_ENV=production webpack",
    "postbuild": "dts-bundle-generator -o dist/index.d.ts src/index.ts",
    "lint": "eslint . --ext .ts --ext .tsx",
    "prettier": "prettier --check './src/**.(ts|tsx|js)'",
    "prepare": "husky install",
    "test": "jest",
    "storybook": "start-storybook -p 6006 --no-open",
    "deploy-storybook": "storybook-to-ghpages"
  },
  "files": [
    "dist"
  ],
  "author": "Bruce Harrison",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/bruceharrison1984/Calendo",
    "type": "git"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@storybook/addon-actions": "^6.4.19",
    "@storybook/addon-console": "^1.2.3",
    "@storybook/addon-essentials": "^6.4.19",
    "@storybook/addon-links": "^6.4.19",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/react": "^6.4.19",
    "@storybook/storybook-deployer": "^2.8.10",
    "@types/chance": "^1.1.3",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@types/react": "^17.0.40",
    "@types/webpack": "^5.28.0",
    "@types/webpack-bundle-analyzer": "^4.4.1",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "babel-jest": "^27.5.1",
    "barrelsby": "^2.3.3",
    "chance": "^1.1.8",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^5.2.7",
    "date-fns": "^2.28.0",
    "dts-bundle-generator": "^6.5.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-transform-css": "^3.0.0",
    "mini-css-extract-plugin": "^1.6.2",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-test-renderer": "^17.0.2",
    "regenerator-runtime": "^0.13.9",
    "sass": "^1.49.9",
    "sass-loader": "^10.2.1",
    "style-loader": "^2.0.0",
    "ts-node": "^10.7.0",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "^4.6.2",
    "webpack": "^4.46.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.9.2"
  },
  "peerDependencies": {
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "extends": [
      "prettier",
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react-hooks/recommended"
    ],
    "plugins": [
      "sort-imports-es6-autofix",
      "unused-imports",
      "@typescript-eslint"
    ],
    "rules": {
      "sort-imports-es6-autofix/sort-imports-es6": [
        2,
        {
          "ignoreCase": false,
          "ignoreMemberSort": false,
          "memberSyntaxSortOrder": [
            "none",
            "all",
            "multiple",
            "single"
          ]
        }
      ],
      "unused-imports/no-unused-imports": "error"
    },
    "ignorePatterns": [
      "node_modules",
      "dist"
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  }
}