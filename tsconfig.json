{
  "compilerOptions": {
    "target": "ES2016",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": false,
    "jsx": "react-jsx",
    "sourceMap": true,
    "outDir": "dist",
    "declaration": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": false,
    "baseUrl": ".",
    "noEmit": false,
    "noEmitOnError": true,
    "paths": {
      "@/*": ["src/*"],
    }
  },
  "include": ["src", "__tests__"],
  "exclude": [".stories.tsx$", "node_modules"]
}
