{
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "es6",
    "lib": ["ES2021", "DOM"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "types": ["vitest/globals", "vitest-dom/extend-expect"]
  },
  "include": [
    "src",
    "__tests__",
    "__stories__",
    "vitest-setup.ts",
    "vitest.config.ts"
  ],
  "exclude": ["node_modules"]
}
